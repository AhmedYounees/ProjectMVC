@model List<Product>
@{

    ViewBag.PageTitle = "Category Managment";
    ViewBag.CardTitle = "View Category";
    Layout = "_DashboradLayout";
}


<div>

<a asp-action="Create"  asp-controller="Category" class="btn btn-primary">Create New </a>
</div>
<br />
    <table class="table table-bordered table-hover">
    <tr>
        <th>Name</th>
        <th>Description</th>
        <th>Price</th>
        <th>Image</th>
        <th>Actions</th>
    </tr>
    @foreach(var item in Model)
    {
        <tr>

            <td>@item.Name</td>
            <td>@item.Description</td>
            <td>@item.Price</td>
            <td><img src="\@item.img"></td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" asp-controller="Product" class="btn btn-primary">Edit</a>
                <a asp-action="Delete" asp-route-id="@item.Id" asp-controller="Product" class="btn btn-danger">Delete</a>

            </td>
        </tr>


    }
</table>
