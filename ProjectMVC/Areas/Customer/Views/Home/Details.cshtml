@using Entities.ViewModels;
@{
    Layout = "_Customer";
}
@model ShopingCartVM;

@* واحد هيتحنيك ويقول ليه ضايف المكتبة هنا والله ما راضية تشتغل  معايا غير بيهاا *@
<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

<section class="py-5">
    <div class="container px-4 px-lg-5 mt-5">
        <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">
<div class="col mb-2">
    <div class="card h-100 w-50">
        <!-- Product image-->
         <img class="card-img-top" src="~/@Model.Product.img" width="20" height="100" alt="..." />
        <!-- Product details-->
        <div class="card-body p-4">
            <div class="text-center">
                <!-- Product name-->
                <h5 class="fw-bolder">@Model.Product.Description</h5>
                <!-- Product price-->
                $@Model.Product.Price
            </div>
        </div>
        <!-- Product actions-->
        <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
            <input asp-for="@Model.Count" value="@Model.Count" class="form-control text-center me-3" />
            <div class="text-center"><a class="btn btn-outline-dark mt-auto" href="#">Add To Card</a></div>
        </div>
    </div>
</div>
        </div>
    </div>
</section>