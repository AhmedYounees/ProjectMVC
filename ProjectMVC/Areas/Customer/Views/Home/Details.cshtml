@using Entities.ViewModels;
@{
    Layout = "_Customer";
}
@model ShopingCart;

<form  method="post" >
<section class="py-5 bg-light">
    <div class="container px-4 px-lg-5 my-5">
        <div class="row gx-4 gx-lg-5 align-items-center">
           
            <div class="col-md-6">
                <img class="img-fluid rounded mb-4 mb-md-0" src="~/@Model.Product.img" alt="@Model.Product.Description" style="width: 100%; max-height: 500px; object-fit: cover;" />
            </div>
        
            <div class="col-md-6">
                <h1 class="display-5 fw-bolder">@Model.Product.Name</h1>
                <div class="fs-5 mb-4">
                    <span class="text-muted text-decoration-line-through">$@(Model.Product.Price+200)</span>
                    <br />
                    <span class="text-primary">$@Model.Product.Price</span>
                </div>
                <p class="lead">@Model.Product.Description</p>
                <div class="d-flex">
                    <input asp-for="@Model.Count" value="@Model.Count" class="form-control text-center me-3" style="width: 75px;" />
                    <button type="submit" class="btn btn-outline-dark flex-shrink-0">
                        <i class="bi-cart-fill me-1"></i>
                        Add to Cart
                    </button>
                </div>
                <ul class="mt-4 list-unstyled">
                    <li><strong>Category:</strong> @Model.Product.Category.name</li>
                    <li><strong>Availability:</strong> In Stock</li>
                    <li><strong>Brand:</strong> @Model.Product.Name</li>
                </ul>
            </div>
        </div>
         
        <div >
            
                @foreach(var item in Model.Product.Reviews)
                {
                    <h1 style="border :1px solid red">@item.comment,,,@item.Rate,,@item</h1>
                }
               @* @* هنا دا الاكشن العايزه عشان يبعتلك الافرج *@
                <a href="/Customer//home/ClacRate/@Model.Product.Id"></a>
        </div>
    </div>
</section>
</form>
<Form style="border:2px solid black" asp-action="Comment" asp-controller="Home" asp-route-id="@Model.Product.Id">
    <label>Comment</label><br />
    <input type="text" name="comment" style="width:200px;" /><br />
    <input type="number" name="rate" style="width:200px;" /><br />
    <button type="submit" class="btn btn-success">Add Comment</button>
</Form>
